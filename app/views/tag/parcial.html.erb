<div class="container">
  <div class="hero-unit">
    <h2>Asignar Tag a <%= params[:tipo] %></h2>
    <%= form_tag ({:action => 'conf', :eltipo => params[:tipo], :eltag => params[:tg]}) do  %>
        <p>Seleccione el objeto al que se le asignar√° el tag:</p>
        <% @algo = Tag.new.dar_objetos(params[:tipo]) %>
        <% if params[:c] == 'Temas' %>
            <%= select_tag :c, options_for_select(@algo.collect{ |u| [u.NOMBRE, u.id] }) %>
        <% elsif params[:c] == 'Reuniones' %>
            <%= select_tag :c, options_for_select(@algo.collect{ |u| [u.FECHA, u.id] }) %>
        <% elsif params[:c] == 'Fuentes' %>
            <%= select_tag :c, options_for_select(@algo.collect{ |u| [u.AUTOR, u.id] }) %>
        <% elsif params[:c] == 'Compromisos' %>
            <%= select_tag :c, options_for_select(@algo.collect{ |u| [u.TITULO, u.id] }) %>
        <% elsif params[:c] == 'Fuentes' %>
            <%= select_tag :c, options_for_select(@algo.collect{ |u| [u.AUTOR, u.id] }) %>
        <% else %>
            <%= select_tag :c, options_for_select(@algo.collect{ |u| [u.NOMBRE, u.id] }) %>
        <% end %>
        <p><%= submit_tag 'Asignar', :class => 'btn btn-large btn-success' %></p>
    <% end %>
  </div>
</div>