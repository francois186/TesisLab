<style type="text/css">
    body {
        padding-top: 60px;
        padding-bottom: 40px;
    }
    .sidebar-nav {
        padding: 9px 0;
    }

    @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
            float: none;
            padding-left: 5px;
            padding-right: 5px;
        }
    }
</style>
<div class="container">
<h1>Editar acta de reunion</h1>
  <br><br>
  <div class="hero-unit">
    <%= form_for @reunion ,url: { action: :update, id: @reunion.id } do |f| %>
        <% if @reunion.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@reunion.errors.count, "error") %> no es posible salvar la reunion</h2>

              <ul>
                <% @reunion.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :RESUMEN %>
          <%= f.text_area :RESUMEN , :cols => "70", :rows => "10" %>
        </div>
        <div class="field">
          <%= f.label :CONCLUSIONES %>
          <%= f.text_area :CONCLUSIONES , :cols => "70", :rows => "10"%>
        </div>
        <div class="field">
          <%= f.label :FECHA %>
          <%= f.date_select :FECHA %>
        </div>
        <div class="field">
          <%= f.label :TESIS_ID %>
          <%= f.collection_select :TESIS_ID, Tesi.all, :id, :NOMBRE, :prompt => "Seleccione la tesis" %>

        </div>


        <div class="actions">
          <%= f.submit "Guardar acta de reunion"%>
        </div>
    <% end %>

         </div>
<%= link_to 'Back', '/reuniones/list' %>
</div>